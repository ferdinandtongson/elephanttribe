<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choiceDrawer"
    tools:openDrawer="start"
    style="@style/Elephant.Drawer">

    <ImageView
        android:id="@+id/choiceBackgroundImage"
        style="@style/Elephant.BackgroundImage"/>

    <include layout="@layout/standard_tutorial"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/choiceNavigationView"
        app:headerLayout="@layout/drawer_header"
        app:itemIconTint="@color/drawer_item"
        app:itemTextColor="@color/drawer_item"
        app:menu="@menu/menu_drawer"
        style="@style/Elephant.Navigation">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>